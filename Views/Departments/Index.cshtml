@model IEnumerable<SalesWebMvc.Models.Department> // Declara o tipo de model que a view usa.



@{  // Todo o código aqui.
    
    ViewData["Title"] = "Index";
}

<h2> Index </h2>

<p>
    <a asp-action="Create">Create New</a> 
    @*  asp-action é um tag-helper que vai criar um link apontando para a ação "Create" deste controlador
        Obs: É necessário, no controlador, existir o método 'Create'
    *@
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
        <tbody>
        @foreach (var department in Model)
        {
            <tr>
                @* ambas as formas abaixo estão corretas *@
                <td>
                    @Html.DisplayFor(item => department.Id)
                </td>
                <td>
                    @department.Name
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {});
                    @Html.ActionLink("Details", "Details", new { });
                    @Html.ActionLink("Delete", "Delete", new { });
                </td>
            </tr>
        }
    </tbody>

</table>